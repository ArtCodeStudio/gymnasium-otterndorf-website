bs5-navbar.navbar.navbar-main.fixed-top.navbar-dark.bg-primary
  .container-fluid.d-block
    .row.justify-content-between
      //- Left
      .col-auto.d-flex.align-items-center
        bs5-toggle-button.text-light(target-id="main-sidebar")
          ul.nav
            li.nav-item.d-flex.align-items-center
              bs5-icon(src="/iconset/svg/icon_menu.svg" size="32" rv-hide="isActive" rv-on-click="toggle")
            li.nav-item.d-flex.align-items-center
              bs5-icon(src="/iconset/svg/icon_close.svg" size="32" rv-show="isActive" rv-on-click="toggle")
      //- Right
      gy-link-list.col-auto.d-flex.align-items-center(type="toolbar")
        //- Only on desktop
        ul.nav.d-none.d-lg-flex
          li.nav.d-flex(ssr-rv-each-item="items")
            a.nav-link.text-light(ssr-rv-href="item.link" ssr-rv-text="item.name")
