a.card.hover-card-sm.mb-3(rv-href="post.slug | post")
  img(rv-if="sections.image.image" rv-src="sections.image.image | strapi-image-url 'small'" class="card-img-top" rv-alt="sections.image.image.alternativeText")
  .card-body(rv-debug="sections")
    p(rv-debug="post")
    h6.card-subtitle.mb-2(rv-text="post.__typename | entry-type-name" rv-add-class="post.__typename | entry-type-color | prepend 'text-'")
    h5.card-title(rv-text="post.title")
    p.card-text(rv-if="sections.text.text")
      span(rv-html="sections.text.text | markdown | strip-html | cut catTextAt ' ...'")
    span.card-text.text-muted
      | [ post.updated_at | or post.published_at | or post.created_at | moment-locale 'de' | calendar | capitalize ] von <u>[ post.author ]</u>
