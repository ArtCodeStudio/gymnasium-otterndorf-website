bs4-navbar.navbar.navbar-main.fixed-top.navbar-dark.bg-primary
  .container-fluid.d-block.px-0
    .row.justify-content-between
      //- Left
      .col-auto.d-flex.align-items-center.px-0
        bs4-toggle-button.text-light(target-id="main-sidebar")
          ul.nav
            li.nav-item.d-flex.align-items-center
              bs4-icon(src="/iconset/svg/icon_menu.svg" size="32" rv-hide="isActive" rv-on-click="toggle")
            li.nav-item.d-flex.align-items-center
              bs4-icon(src="/iconset/svg/icon_close.svg" size="32" rv-show="isActive" rv-on-click="toggle")
      //- Right
      link-list.col-auto.d-flex.align-items-center
        //- Only on desktop
        ul.nav.d-none.d-lg-flex
          li.nav.d-flex(rv-each-item="items")
            a.nav-link.text-light(rv-href="item.url") { item.label }
