{
  "files": [
    "./scripts/ssr/index.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "sourceMap": true,
    "outDir": "assets",
    "incremental": true,
    "baseUrl": "scripts",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
  },
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "assets"
  ]
}