.navbar.navbar-main
  .container-fluid.container-xxl.d-block
    .row.flex-xl-nowrap
      //- Left
      .col-auto.order-1.d-flex.flex-shrink-1.align-items-center.justify-content-start
        .row.d-flex.align-items-center.justify-content-start
          a.col-12.navbar-brand.d-flex.align-items-center.p-0.ms-2(href="/")
            bs5-icon(src="/images/logo.svg" height="64" width="160" rv-hide="isActive" rv-on-click="toggle")
            //- .brand-text.ms-1.d-flex.flex-column.justify-content-center.fw-bold
            //-   .text-blue Gymnasium
            //-   .text-greenlight Otterndorf
            //-   .text-green Offene
            //-   .text-cyan Ganztagsschule
      //- Middle on desktop / full on smartphone
      .col-search.col-12.col-xl-9.order-3.order-xl-2.d-flex.flex-fill.flex-grow-1.w-100.align-items-start.justify-content-center.justify-content-xl-end
        .row.w-100.mt-3.my-xl-0.d-flex.justify-content-center.justify-content-xl-end
          .col-auto
            gy-search-input
          .col-12.d-none.d-xl-flex.justify-content-end
            gy-nav-dropdown
      //- Right
      .col.order-2.order-xl-3.d-flex.d-xl-none.align-items-center
        .row.d-flex.align-items-center.ms-auto
          bs5-toggle-button.col-auto.text-dark.mx-2.d-xl-none(target-id="right-sidebar")
            ul.nav.nav-icon
              bs5-icon.text-blue.position-absolute.bg-icon(src="/images/menu-bg-icon.svg" size="32")
              li.nav-item.d-flex.align-items-center.py-0
                bs5-icon.text-white.p-1(src="/iconset/svg/icon_menu.svg" size="32" csr-rv-hide="isActive" csr-rv-on-click="toggle")
              li.nav-item.d-flex.align-items-center.py-0
                bs5-icon.text-white.p-1(src="/iconset/svg/icon_close.svg" size="32" csr-rv-show="isActive" csr-rv-on-click="toggle")