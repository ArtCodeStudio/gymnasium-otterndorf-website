.navbar.navbar-main(csr-rv-touch-events csr-rv-on-swipeleft="showSidebar" csr-rv-on-swiperight="hideSidebar")
  .container-fluid.d-block
    .row.d-flex.justify-content-md-between
      //- Left
      .col-6.col-md-3.order-1.d-flex.align-items-center
        .row.d-flex.align-items-center.me-auto
          a.col-auto.navbar-brand.d-flex.align-items-center.p-0.mx-2(href="/")
            bs5-icon(src="/images/logo.svg" height="64" rv-hide="isActive" rv-on-click="toggle")
            //- .brand-text.ms-1.d-flex.flex-column.justify-content-center.fw-bold
            //-   .text-blue Gymnasium
            //-   .text-greenlight Otterndorf
            //-   .text-green Offene
            //-   .text-cyan Ganztagsschule
      //- Middle on desktop / full on smartphone
      .col-search.col-12.col-md-9.order-3.order-md-2.d-flex.align-items-start.justify-content-center.justify-content-md-end
        .row.mt-3.mx-2.my-md-0.d-flex.justify-content-center.justify-content-md-end
          .col-auto
            gy-search-input
          .col-12.d-none.d-md-flex.justify-content-end
            gy-nav-dropdown
      //- Right
      .col-6.col-md-3.order-2.order-md-3.d-flex.d-md-none.align-items-center
        .row.d-flex.align-items-center.ms-auto
          bs5-toggle-button.col-auto.text-dark.mx-2.d-xl-none(target-id="right-sidebar")
            ul.nav.nav-icon
              bs5-icon.text-blue.position-absolute.bg-icon(src="/images/menu-bg-icon.svg" size="32")
              li.nav-item.d-flex.align-items-center.py-0
                bs5-icon.text-white.p-1(src="/iconset/svg/icon_menu.svg" size="32" csr-rv-hide="isActive" csr-rv-on-click="toggle")
              li.nav-item.d-flex.align-items-center.py-0
                bs5-icon.text-white.p-1(src="/iconset/svg/icon_close.svg" size="32" csr-rv-show="isActive" csr-rv-on-click="toggle")