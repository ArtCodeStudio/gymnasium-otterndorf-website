a.card.hover-card-sm.mb-3(rv-href="schoolSubject.slug | school-subject")
  img(rv-if="sections.image.image" rv-src="sections.image.image | strapi-image-url 'small'" class="card-img-top" rv-alt="sections.image.image.alternativeText")
  .card-body
    h6.card-subtitle.mb-2(rv-text="schoolSubject.__typename | entry-type-name" rv-add-class="schoolSubject.__typename | entry-type-color | prepend 'text-'")
    h5.card-title(rv-text="schoolSubject.title")
    p.card-text(rv-if="sections.text.text")
      span(rv-html="sections.text.text | markdown | strip-html | cut catTextAt ' ...'")
    span.card-text.text-muted(rv-if="showDate")
      | [ schoolSubject.updated_at | or schoolSubject.published_at | or schoolSubject.created_at | lx-from-iso | lx-set-locale 'de' | lx-to-moment-calendar | capitalize ]
