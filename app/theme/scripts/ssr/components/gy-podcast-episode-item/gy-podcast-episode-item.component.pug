a.card.hover-card-sm.mb-3(rv-href="episode.slug | podcast")
  img(rv-if="episode.image" rv-src="episode.image | strapi-image-url 'small'" class="card-img-top" rv-alt="episode.image.alternativeText")
  .card-body
    h6.card-subtitle.mb-2(rv-add-class="episode.__typename | entry-type-color | prepend 'text-'") Podcast
    h5.card-title(rv-text="episode.title")
    p.card-text(rv-if="episode.subtitle")
      span(rv-html="md | markdown | strip-html | cut catTextAt ' ...'")
    span.card-text.text-muted(rv-if="showDate")
      span
        | [ episode.pubDate | or episode.published_at | lx-from-iso | lx-set-locale 'de' | lx-to-moment-calendar | capitalize ]
      span(rv-if="episode.author")
        |  von [ episode.author ]
