{
  "kind": "collectionType",
  "collectionName": "podcast_episodes",
  "info": {
    "name": "Podcast Episode",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "pubDate": {
      "type": "datetime"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "explicit": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Full",
        "Trailer",
        "Bonus"
      ],
      "default": "Full",
      "required": true
    },
    "block": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "season": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    },
    "episode": {
      "type": "integer",
      "required": true,
      "min": 1
    }
  }
}
