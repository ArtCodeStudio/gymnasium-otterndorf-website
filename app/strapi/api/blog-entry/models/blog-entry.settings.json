{
  "kind": "collectionType",
  "collectionName": "blog_entries",
  "info": {
    "name": "Blog Post",
    "displayName": "Blog Eintr√§ge",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 80
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.text",
        "content.image",
        "section.gallery-slideshow",
        "section.slideshow",
        "content.button",
        "section.blog-slideshow",
        "section.blackboard-slideshow",
        "home.calendar",
        "home.news",
        "section.facts",
        "student-section.student-quote",
        "section.i-frame",
        "section.mensa-max",
        "section.podcast-episode"
      ]
    },
    "blog_category": {
      "via": "blog_entries",
      "model": "blog-category"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "pages": {
      "via": "blog_entries",
      "collection": "page"
    },
    "author": {
      "type": "string",
      "required": true,
      "default": "Admin"
    }
  }
}
