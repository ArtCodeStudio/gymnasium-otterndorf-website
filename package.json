{
  "name": "gymnasium-otterndorf-website",
  "private": true,
  "author": "Art+Code Studio (Pascal Garber) <pascal@artandcode.studio>",
  "license": "AGPL",
  "scripts": {
    "postinstall": "yarn run install:strapi && yarn run install:strapi-student",
    "install:strapi": "cd app/strapi && NODE_OPTIONS='' npm install",
    "install:strapi-student": "cd app/strapi-student && NODE_OPTIONS='' npm install",
    "build": "yarn workspaces foreach run build && yarn run build:strapi && yarn run build:strapi-student && yarn run build:strapi-configs",
    "build:strapi": "cd app/strapi NODE_OPTIONS='' npm run build",
    "build:strapi-student": "cd app/strapi-student NODE_OPTIONS='' npm run build",
    "build:strapi-configs": "yarn workspace @gymott/strapi-plugin-documentation-config run start",
    "start:local": "node-app-manager --env local",
    "start:prod": "node-app-manager --env production",
    "start:dev": "node-app-manager --env development"
  },
  "workspaces": [
    "packages/node-podcast",
    "packages/node-app-manager/backend",
    "packages/node-app-manager/packages/redbird",
    "packages/riba/packages/*",
    "packages/riba/backend/*",
    "packages/riba/infra/*",
    "!packages/riba/infra/cli",
    "!packages/riba/infra/doc",
    "!packages/riba/infra/schematics",
    "app/*",
    "!app/strapi",
    "!app/strapi-student",
    "test",
    "tools/*"
  ],
  "resolutions": {
    "@types/express-serve-static-core": "latest",
    "@types/node": "latest",
    "@ribajs/nest-theme": "workspace:*",
    "@ribajs/demo-router-view": "workspace:*",
    "@ribajs/eslint-config": "workspace:*",
    "@ribajs/tsconfig": "workspace:*",
    "@ribajs/types": "workspace:*",
    "@ribajs/webpack-config": "workspace:*",
    "@ribajs/webpack-serve": "workspace:*",
    "@ribajs/bs4": "workspace:*",
    "@ribajs/bs5": "workspace:*",
    "@ribajs/cache": "workspace:*",
    "@ribajs/content-slider": "workspace:*",
    "@ribajs/core": "workspace:*",
    "@ribajs/events": "workspace:*",
    "@ribajs/extras": "workspace:*",
    "@ribajs/history": "workspace:*",
    "@ribajs/i18n": "workspace:*",
    "@ribajs/iconset": "workspace:*",
    "@ribajs/jquery": "workspace:*",
    "@ribajs/leaflet-map": "workspace:*",
    "@ribajs/luxon": "workspace:*",
    "@ribajs/moment": "workspace:*",
    "@ribajs/monaco-editor": "workspace:*",
    "@ribajs/octobercms": "workspace:*",
    "@ribajs/pdf": "workspace:*",
    "@ribajs/photoswipe": "workspace:*",
    "@ribajs/router": "workspace:*",
    "@ribajs/shopify": "workspace:*",
    "@ribajs/shopify-easdk": "workspace:*",
    "@ribajs/shopify-nest": "workspace:*",
    "@ribajs/shopify-tda": "workspace:*",
    "@ribajs/ssr": "workspace:*",
