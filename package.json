    "@ribajs/npm-package": "workspace:*",
    "@ribajs/postcss-config": "workspace:*",
    "@ribajs/nest-lunr": "workspace:*",
    "@ribajs/babel-config": "workspace:*",
    "@ribajs/esbuild": "workspace:*"
  },
  "devDependencies": {
    "@artcodestudio/node-app-manager": "workspace:*",
